{
  "name": "my-browser-utils",
  "version": "1.0.0",
  "description": "個人用のブラウザユーティリティChrome拡張機能",
  "main": "dist/background.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run typecheck && pnpm run bundle",
    "bundle": "esbuild src/background.ts src/content.ts src/popup.ts --bundle --format=iife --platform=browser --target=es2020 --outdir=dist --sourcemap",
    "typecheck": "tsc --noEmit",
    "watch": "pnpm run bundle --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "prettier": "prettier --write --cache --log-level warn --ignore-path .prettierignore './*.{js,ts,jsx,tsx,css,html,json,md}' './{docs,src,tests}/**/*.{js,ts,jsx,tsx,css,html,json,md}'",
    "prettier:check": "prettier --check --cache --ignore-path .prettierignore './*.{js,ts,jsx,tsx,css,html,json,md}' './{docs,src,tests}/**/*.{js,ts,jsx,tsx,css,html,json,md}'",
    "format": "pnpm run prettier",
    "lint": "pnpm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@praha/byethrow": "^0.8.2",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/chrome": "^0.1.32",
    "@types/jsdom": "^27.0.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@typescript-eslint/types": "^8.50.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.0.10",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-neverthrow": "^1.1.4",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "10.1.7",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.15"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.26.0"
}
